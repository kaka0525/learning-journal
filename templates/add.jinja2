{% extends "base.jinja2" %}
{% block section %}
{% if not request.authenticated_userid %}
<div>
  <p id="restriction">You are not supposed to be here. Login First!</p>
</div>
{% else %}
    <div align="center">
        <form id="entry_grid" class="add_entry" action="{{ request.route_url('create') }}"
        method="POST">
        <h2>New Journal Entry</h2>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title"required/>

        <textarea
            id="text"
            name="text"
            placeholder="What did you learn today, Karen?"
            cols="60"
            rows="8"></textarea>
        <!-- <button type="submit">+Add</button> -->
        <input id="submit-new" type="submit" value="Submit" name="Submit"/>
      </form>
  </div>
{% endif %}

{% endblock %}
