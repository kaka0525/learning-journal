{% extends "base.jinja2" %}
{% block section %}

<div align="center" id="ajax-new-entry" class="hide-on-start">
    <form id="ajax-new-entry-form" class="add_entry" action="{{ request.route_url('create') }}"
    method="POST">
        <h2>New Journal Entry</h2>

        <label for="title">Title:</label>
        <input type="text" id="ajax-title" name="title"required/>

        <textarea
            id="ajax-text"
            name="text"
            placeholder="What did you learn today, Karen?"
            cols="60"
            rows="8"></textarea>
        <!-- <button type="submit">+Add</button> -->
        <input id="submit-new-ajax" type="submit" value="Submit" name="Submit"/>
    </form>
</div>

<div id="entry-list">
{% for entry in entries %}
  <article class='entry' id='entry{{entry.id}}'>
    <h3><a href="{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a></h3>
    <a href="https://twitter.com/share"
            class="twitter-share-button"
            data-url="{{ request.route_url('detail', id=entry.id) }}"
            data-text="{{ entry.title }}"
            data-via="Karensywong"
            data-size="large"
            data-count="none">
        Tweet Entry
    </a>
    <p class='dateline'>{{ entry.timestamp.strftime('%b, %d, %y')}}</p>
    <div class='entry_body'>
      {{ entry.markd_in(entry.text) | safe }}
    </div>
  </article>
{% else %}
    <div class='entry_body' id='no-entries'>
      <p><em>No entries here so far </em></p>
    </div>
{% endfor %}
</div>


 <article class="hide-on-start journal-entry">
    <h2 class="title" id="entry-title"></h2>
    <div id="entry-text">
    </div>

    <span class="date"></span>
        <a href="https://twitter.com/share" class="twitter-share-button" data-url="" data-text="" data-via="Karensywong" data-size="large" data-count="none">Tweet Entry</a>
        {% if request.authenticated_userid %}
        <button class="button-forward" id="edit-button">
            Edit Entry
        </button>
        {% endif %}
    </div>
</article>


<div class="hide-on-start" id= "edit-form-container">
<form id="edit-form">
    <h2>Edit Entry</h2>
    <input id="in-title" type="hidden" name="title" placeholder="Title" type="text">
    <textarea id="in-text" name="text" placeholder="Entry Text"></textarea>
    <input id="submit-new" type="submit" value="Submit" name="Submit"/>
</form>

{% endblock %}
