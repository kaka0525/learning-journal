{% extends "base.jinja2" %}
{% block body %}
  <header>
        <nav>
            <ul>
                <li><a href="index.html">+Home</a></li>
                <li><a href="new_entry.html" class="selected">+New Entry</a></li>
<!--                 show the latest entry on the detail page -->
                <li><a href="detail.html">+View Latest Entry</a></li>
            </ul>
        </nav>
    </header>

    <div align="center"><form id="entry_grid" action={{ request.route_url('add') }} method="post">
        <h2>New Journal Entry</h2>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title_name">

        <label for="date">Date:</label>
        <input type="text" id="date" name="date_name">

        <textarea id="text_entry" name="text_entry_name" placeholder="What did you learn today, Karen?"  cols="60" rows="8"></textarea>
        <button type="submit">+Add</button>
      </form>
  </div>
  {% endfor %}
{% endblock %}
