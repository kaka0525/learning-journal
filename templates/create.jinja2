<!-- <h2>Entries</h2> -->
{% for entry in entries %}
<article class="entry" id="entry={{entry.id}}">
  <h3>{{ entry.title }}</h3>
  <p class="dateline">{{ entry.timestamp.strftime('%b. %d, %Y') }}
  <div class="entry_body">
    {{ entry.text|safe }}
  </div>
</article>
{% else %}
<div>
  <p id="restriction">You are not supposed to be here. Login First!</p>
</div>

